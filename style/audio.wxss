.audio {
  display: flex;
  align-items: center;
  height: 80rpx;
  border: 1rpx solid #ebebeb;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
}

.playOrstop {
  position: relative;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f29219;
  margin-left: 20rpx;
}

.play {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-40%, -50%);
  height: 0px;
  width: 0px;
  border-top: 25rpx solid transparent;
  border-left: 35rpx solid #fff;
  border-bottom: 25rpx solid transparent;
}

.stop {
  display: flex;
  justify-content: space-around;
  width: 60%;
  /* height: 15rpx; */
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.stop .shu {
  width: 10rpx;
  height: 28rpx;
  background: #fff;
}

.bar {
  width: 410rpx;
  height: 4rpx;
  border-radius: 2rpx;
  background-color: #b5b6b5;
  margin-left: 20rpx;
  position: relative;
}

.pro_pos {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  left: 0rpx;
  border-radius: 50rpx;
  background: #fff;
  border: 1rpx solid #c7c7cc;
  top: 0;
  transform: translateY(-50%);
}

.progress {
  height: 100%;
  background-color: #f29219;
}

.audio_time {
  margin-left: 20rpx;
  color: #999;
}

/*进度条长度 */

.slid {
  width: 70%;
  position: absolute;
  left: 85rpx;
  top: 50%;
  transform: translateY(-50%);
}
