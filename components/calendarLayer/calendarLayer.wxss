@import '/style/weui.wxss';
@import '/style/app/app.wxss';

/* 日历 */

page {
  font-family: PingFangSC-Medium;
}
.close{
  position: absolute;
  z-index: 99;
  bottom:-120rpx;
  width: 70rpx;
  height: 70rpx;
  right: 50%;
  transform: translate(50%)
}
.close image{
  width: 100%;
  height: 100%;
}
.calendar_mask {
  right: 50%;
  transform: translate(50%);
  position: fixed;
  top: 0;
  margin-top:110rpx;
  z-index: 10;
  background: #fff;
  border: 1rpx solid #fff;
  border-radius: 35rpx;
}

.calendar {
  width: 100%;
    border: 1rpx solid #fff;
  border-radius: 35rpx;
  background: #fff;
  /* margin-top: 20rpx; */
}
.prev_tab,.next_tab{
  display: block;
  width: 80rpx;
  height: 60rpx;
  
}
.next_tab{
  text-align: right;
}
.calendar_head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 0 40rpx;
  font-size: 34rpx;
  color:rgba(239,207,11,1);
}

.calendar_head image {
  width: 16rpx;
  height: 26rpx;
}

.calendar .tr.week {
  margin: 0;
  background: none;
  text-align: center;
  font-size: 28rpx;
  border-radius: 20rpx;
  border-bottom: none;
}

.calendar .tr {
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* border-bottom: 2rpx solid #e5e5e5; */
  padding: 0 20rpx;
}

.calendar .td {
  width: 82rpx;
  text-align: center;
  color: #888;
  border-radius: 6rpx;
  padding: 6rpx;
}

.calendar .week .td {
  color: #000;
}

.date_active {
  background:rgba(239,207,11,1);
  color: #fff !important;
  border: 1rpx solid rgba(239,207,11,1);
  border-radius: 50% !important ;
  size: 24rpx;
  
}

.calendar .o_month {
  color: #b2b2b2;
}

.course_num {
  color:rgba(239,207,11,1);
  /* margin-top: 10rpx; */
  font-size: 24rpx;
  height: 20rpx;
  line-height: 20rpx;
}

