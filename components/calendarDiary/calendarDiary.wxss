@import '/style/weui.wxss';
@import '/style/app/app.wxss';

/* 日历 */

.calendar {
  width: 100%;
  background: #fff;
}

.calendar_head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 0 40rpx;
  font-size: 34rpx;
  color: #f29219;
}

.calendar_head image {
  width: 16rpx;
  height: 26rpx;
}

.calendar_body {
  padding: 0 20rpx 20rpx;
}

.calendar .week {
  margin: 0;
  background: none;
  text-align: center;
  font-size: 28rpx;
  border-radius: 20rpx;
}

.calendar .tr {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 94rpx;
}

.calendar .td {
  width: 82rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #888;
  border-radius: 6rpx;
}

.calendar .week .td {
  color: #000;
  font-size: 28rpx;
}

.date_active {
  color: #f29219 !important;
}

.calendar .o_month {
  color: #b2b2b2;
}

.calendar .td.select {
  border-radius: 60rpx;
  background: #71c009;
  color: #fff;
}

.calendar .td.unselect {
  border-radius: 60rpx;
  background: #999;
  color: #fff;
}
