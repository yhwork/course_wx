page {
  font-family: PingFangSC-Regular;
}

.addCourse {
  display: flex;
  flex-flow: column wrap;
  padding-top: 90rpx;
}

.addCourse .data {
  width: 690rpx;
  height: 467rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1rpx 27rpx 0px rgba(150, 149, 149, 0.26);
  border-radius: 30rpx;
  position: relative;
  display: flex;
  flex-flow: column wrap;
  align-items: center;
}
.addCourse .gender{
  display: flex;
  justify-content: flex-end;
}
.addCourse .bg{
  background-color: none;
}

.add_head {
  position: absolute;
  top: -15%;
  width: 134rpx;
  height: 134rpx;
  background: rgba(231, 198, 14, 1);
  border-radius: 50%;
  display: flex;
  flex-flow: column wrap;
  align-items: center;
  justify-content: center;
}

.add_head text {

  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.data_info {
  position: absolute;
  bottom: 60rpx;
  left: 90rpx;
  right: 90rpx;
}
.radio-group {
  margin-left: 16rpx;
  display: flex;
  align-items: center;
}

.checkdatas {
  margin: 0 10rpx;
  display: flex;
  align-items: center;
  width: 22rpx;
  height: 22rpx;
  border-radius: 50%;
  background-color: #f8f6f2;
  border: 1rpx solid #6e6860;
}
.add_head .img{
  width: 70rpx;
  height: 70rpx;
}
.checkdata {
  margin: 0 10rpx;
  display: flex;
  align-items: center;
  width: 22rpx;
  height: 22rpx;
  border-radius: 50%;
  background-color: #dd9309;
  border: 1rpx solid #dd9309;
}
.data_info .item {
  padding: 10rpx 0;
  display: flex;
  justify-content: space-between;
}

.addCourse .btn {
  margin-top: 190rpx;
  display: flex;
  justify-content: space-between;
}

.addCourse .btn>view {
  text-align: center;
  width: 293rpx;
  height: 61rpx;
  background: rgba(231, 198, 14, 1);
  border-radius: 21rpx;
  line-height: 61rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.page__hd {
  background: url("https://timgsa.baidu.com/timg?image&quality=80 &size=b10000_10000&sec=1532422488724&di=d68b983fe28cdf63cd9fbea3365fd3a0&imgtype=jpg&src=http%3A%2F%2Ff.hiphotos.baidu.com%2Fimage%2Fpic%2Fitem%2F09fa513d269759ee58c4971cbefb43166c22df55.jpg") 100%/100%;
  height: 310rpx;
  box-sizing: border-box;
  padding-left: 44rpx;
  font-size: 30rpx;
  color: #fff;
  position: relative;
}

.writer {
  text-align: right;
}

.addCourse input {
  text-align: right;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

.placeholder {

  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

.photo {
  width: 154rpx;
  height: 154rpx;
  border-radius: 154rpx;
  background: #f1f1f1;
  position: absolute;
  bottom: -72rpx;
  left: 30rpx;
}

.photo image {
  width: 100%;
  height: 100%;
  border-radius: 154rpx;
}

.weui-cell-box {
  margin-top: 20rpx;
  background-color: #fff;
}

.weui-cells__title {
  display: flex;
  justify-content: center;
  align-items: center;
}

.weui-cell:before {
  right: 15px;
  border-top: 1rpx solid #e5e5e5;
}

.hint {
  margin-right: 20rpx;
}

.weui-input {
  text-align: right;
}

.radio-group {
  display: flex;
  justify-content: flex-end;
}

.page__desc {
  color: #fff;
}

.radio-group label {
  margin-left: 70rpx;
  color: #888;
  font-size: 34rpx;
}

.weui-input {
  font-size: 34rpx;
  color: #b2b2b2;
}

.weui-select {
  font-size: 34rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.selected {
  color: #000;
}

.weui-label {
  font-size: 34rpx;
  color: #000;
}

.weui-btn-area {
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translate(-50%);
  margin: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.weui-btn-area view {
  width: 90%;
  height: 94rpx;
  line-height: 94rpx;
  border-radius: 10rpx;
  background-color: #f29219;
  color: #fff;
  text-align: center;
}

.weui-cell__hd {
  display: flex;
  justify-content: flex-start;
}

.weui-cell__hd text {
  color: red;
}

.hint {
  width: 32rpx;
  height: 32rpx;
}

.weui-input {
  color: #000;
}

.weui-cell {
  display: flex;
  justify-content: space-between;
}

.sex_icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  position: absolute;
  z-index: 10;
  right: 0;
  bottom: 0;
}

.sex_icon image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
}

button {
  font-family: PingFangSC-Regular;
}

button::after {
  border: none;
}