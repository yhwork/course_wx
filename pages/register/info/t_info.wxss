.main_bottom {
  width: 100%;
  height: 180rpx;
  background: #fff;
  margin-top: 20rpx;
}

.care_img {
  width: 5%;
  margin: 25rpx 0 0 20rpx;
  float: left;
}

.bottom_wenzi {
  width: 90%;
  float: right;
  font-size: 26rpx;
  color: #b2b2b2;
  margin: 25rpx 5rpx 0 10rpx;
}

button {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  color: #fff;
  background: #eb9100;
  font-size: 30rpx;
  line-height: 90rpx;
  border-radius: 10rpx;
}

.weui-cell {
  height: 50rpx;
  display: flex;
  justify-content: space-between;
}


.radio {
  margin-left: 20rpx;
}

.weui-select {
