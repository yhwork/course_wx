.main_head {
  width: 100%;
  height: 380rpx;
  background: #fff;
  overflow: hidden;
  text-align: center;
}

.head_img {
  width: 50%;
  margin: 50rpx auto 20rpx;
  display: block;
}

.name {
  white-space: nowrap;
}

.infor {
  font-weight: 700;
  margin-left: 30rpx;
}

.main_body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  background: #fff;
  margin-top: 15rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.main_body .input_a {
  margin: 20rpx 0 0 180rpx;
  float: left;
}

.main_body .input_b {
  margin: 20rpx 0 0 30rpx;
  float: left;
}

.wenzi_a {
  float: right;
  color: #b2b2b2;
}

.wenzi_b {
  float: right;
}

.line {
  width: 100%;
  height: 20rpx;
  background: #f4f4f4;
}

.weui-cell {
  width: 100%;
  background: #fff;
}

