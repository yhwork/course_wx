/* pages/mypage/personalInfo/personalInfo.wxss */

.fl {
  float: left;
}

.fr {
  float: right;
}

.textover {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 480rpx;
  font-size: 34rpx;
  color: #000;
  margin-right: 30rpx;
  text-align-last: right;
}

.personalInfo_container {
}

/* header s */

.info_header_wrapper {
  padding: 0 30rpx;
  overflow: hidden;
  background: #fff;
  margin-top: 20rpx;
}

.info_header_wrap {
  border-bottom: 1px solid #e5e5e5;
  width: 100%;
  height: 168rpx;
  overflow: hidden;
}

.info_header_name {
  float: left;
  height: 168rpx;
  line-height: 168rpx;
  font-size: 34rpx;
  color: #000;
}

.info_header_pic {
  display: flex;
  align-items: center;
  float: right;
  height: 100%;
}

.info_header_pic .header {
  width: 128rpx;
  height: 128rpx;
  box-shadow: 0px 0px 13px 0px rgba(0, 0, 0, 0.1);
  border-radius: 64rpx;
  margin-right: 30rpx;
  object-fit: cover;
  overflow: hidden;
}

/* lists s */

.info_lists_li {
  display: flex;
  justify-content: space-between;
  height: 88rpx;
  border-bottom: 1px solid #e5e5e5;
  line-height: 88rpx;
  overflow: hidden;
}

.info_lists_li_title {
  float: left;
  font-size: 34rpx;
  color: #000;
  display: flex;
  align-items: center;
}

.info_lists_li_right {
  float: right;
  display: flex;
  align-items: center;
}

.info_lists_li_right .info_flag {
  /* color: #888; */
}

view .arrow{
  width: 27rpx;
  height: 27rpx;
}

.info_lists_li_title image {
  width: 42rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

/* button s */

.button_submit {
  margin: 50rpx auto;
  width: 670rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background: rgba(242, 146, 25, 1);
  border-radius: 10px;
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  color: rgba(255, 255, 255, 1);
}
.gender {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
}

.gender_mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.3);
}

.gender_box {
  width: 100%;
  height: 276rpx;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  z-index: 11;
  background: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
}


.radio-group .radio {
  display: flex;
  justify-content: center;
}

.right_c {
  font-size: 34rpx;
  color: #000;
  margin-right: 30rpx;
}

.gender_box .title{
  height: 96rpx;
}
.radio{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-top:2rpx solid #DEE1F4; 
}