 }

 /* upload pictures */
.weui-uploader__input-box{
  position:relative;margin-left:30rpx;margin-bottom:9px;width:77px;height:77px;border:1px solid #d9d9d9;
  float:left;
  }
.weui-uploader__input-box:after,.weui-uploader__input-box:before{
  content:" ";position:absolute;top:50%;left:50%;-webkit-transform:translate(-50%,-50%);transform:translate(-50%,-50%);background-color:#d9d9d9;
  }
.weui-uploader__input-box:before{
    width:2px;height:39.5px;
  }
.weui-uploader__input-box:after{
  width:39.5px;height:2px;
  }
.weui-uploader__input-box:active{
  border-color:#999;
  }
.weui-uploader__input-box:active:after,.weui-uploader__input-box:active:before{
  background-color:#999;
  }
  .weui-uploader__input{
    position:absolute;z-index:1;top:0;left:0;width:100%;height:100%;opacity:0
  }
  .upload{
    margin-top:180rpx;
    font-size:26rpx;
    text-align: center;
    color:#999;
  }
  .section_tips_wrap{
    margin-top:50rpx;
  }
  .section_button{
    margin:100rpx auto 20rpx;
  }
  .section_tips_wrap{
    margin-top:20rpx;
  }
  .photo{
    width:155rpx;
    height:155rpx;
    float:left;
    border:1px solid #d9d9d9;
    margin-right:10rpx;

  }
.photo image{
    width:155rpx;
    height:155rpx;
  }