/* input lists s */
.section_lists_wrap{
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
}
.section_lists_ul{
padding: 0 30rpx;
}
.section_lists_li{
  height: 88rpx;
  line-height: 88rpx;
  border-bottom:1px solid #e5e5e5;
}
.section_lists_li:last-child{
  border-bottom:none;
}
.section_lists_li_left{
font-size:34rpx;
font-family:PingFangSC-Regular;
color:rgba(0,0,0,1);
}
.section_lists_li_left text{
  color: #F95B58;
}
.section_lists_li_right{
width: 450rpx;
display: flex;
align-items: center;
justify-content: flex-end;
}
.section_lists_li_right input{
border:none;
width: 100%;
height:88rpx;
line-height: normal;
color: #000;
font-size: 34rpx;
text-align: right;
}
input:-moz-placeholder, textarea:-moz-placeholder { 
/* Mozilla Firefox 4 to 18 */ 
color: #B2B2B2; 
}
