/* header s */
.header_banner_container{
width:660rpx;
height:280rpx;
background:rgba(255,255,255,1);
margin-bottom: 20rpx;
padding: 45rpx;
}
.haeder_banner{
  width: 100%;
  height:208rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;

}
.haeder_banner image{
  width: 502rpx;
  height:208rpx;
}
.header_banner_title{
width: 100%;
