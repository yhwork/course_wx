.logo {
  width: 80%;
  margin: 30rpx auto;
  text-align: center;
}

.logo image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

.btn {
  width: 80%;
  margin: 0 auto;
  height: 80rpx;
  color: #f29219;
  border: 2rpx solid #f29219;
  box-sizing: border-box;
  line-height: 80rpx;
  margin-top: 100rpx;
  text-align: center;
}

.page__bd_list_class {
  display: flex;
  justify-content: center;
  padding-left: 30rpx;
  background: white;
  margin-bottom: 10rpx;
}

.weui-cell__hd {
  display: flex;
  align-items: center;
  font-size: 32rpx;
}

.classname {
  text-align: right;
  padding-right: 62rpx;
  color: #999;
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}

.alistnumber {
  flex-wrap: nowrap;
  width: 100%;
  height: 110rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.a_left {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 24rpx;
  color: #888;
}

.a_left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.al_left view:nth-child(1) {
  color: black;
  font-size: 28rpx;
}

.outclass {
  color: #f29219;
  border: 2rpx solid #f29219;
  padding: 5rpx 15rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.toptitle {
  padding: 10rpx 30rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
  color: #E51C23;
  font-size: 28rpx;
}

.canlist {
  margin-bottom: 10rpx;
}

.canlist .tishi, .classbox>view {
  padding: 10rpx 30rpx;
  background-color: #fff;
}

.aclass, .aclass .left {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.aclass .left image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.aclass .l_left text {
  display: block;
  font-size: 26rpx;
  line-height: 32rpx;
}

.aclass .right {
  padding: 5rpx 20rpx;
  border: 2rpx solid #f29219;
  border-radius: 10rpx;
}

.right button {
  background-color: #fff;
  padding: 0;
  margin: 0;
  color: #f29219;
  font-size: 28rpx;
  line-height:2;
}

.right button::after {
  border: none;
}
