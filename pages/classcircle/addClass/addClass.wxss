page {
  background-color: #fff;
}
.page{
  display: flex;
  flex-flow: column wrap;
  align-items: center;
}
.isremind radio {
  transform: scale(0.8);
  margin-left: 10rpx;
}
.isremind {
  font-size: 28rpx;
  background-color: #fff;
  /* padding: 10rpx 30rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #e51c23;
}

.isremind .radio_group {
  display: inline-block;
  color: #000;
}

.wrap {
  padding: 0 30rpx;
}

.title {
  text-align: center;
  padding: 30rpx 0;
}

.content {
  font-size: 28rpx;
  color: #852948;
  margin-bottom: 50rpx;
}

.info {
  padding: 54rpx 58rpx;
  box-sizing: border-box;
  width: 690rpx;
  /* height: 377rpx; */
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1rpx 27rpx 0rpx rgba(150, 149, 149, 0.26);
  border-radius: 30rpx;
  transform: translateY(50rpx)
}

.info image {
  width: 50rpx;
  height: 30rpx;
  margin-right: 15rpx;
}

.info>view.name {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 35rpx;
  white-space: nowrap;
}

.info>view.name:last-child {
  margin-bottom: 0;
}

.info text {
  font-size: 28rpx;
}

.info>view input {
  font-size: 26rpx;
  color: #666;
  text-align: right;
  width: 100%;
}

.addsubject .addimg {
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #f29219;
  border-radius: 50%;
  overflow: hidden;
}

.save {
  margin-top:114rpx; 
  width: 586rpx;
  height: 61rpx;
  background: rgba(231, 198, 14, 1);
  border-radius: 21rpx;
  color: white;
  line-height: 61rpx;
  font-size: 30rpx;
  text-align: center;
}

picker {
  width: 100%;
}
