@import "../../../components/templates/class/workinfo.wxss";

.top {
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.radio-group {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.b_right1 {
  display: flex;
  justify-items: flex-start;
}
.b_right1 button{
  border: none;
  outline-style: none;
  background-color: white;
}

.b_right1 form{
  background-color: white;
  border: none;
  outline-style: none;
}

.b_right1 text{
  font-size: 28rpx;
  color:#f29219
}

.b_right1 .b_right1_txt{
  font-size: 28rpx;
  color:#666;
}
.radio {
  /* font-size: 28rpx; */
  font-size: 30rpx;
  width: 45%;
  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.radio radio {
  /* transform:scale(0.8) */
  margin-left: 10rpx;
}

.contents {
  padding: 10rpx 30rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.childcontent {
  margin-bottom: 120rpx;
}

.title {
  display: flex;
  align-items: center;
  margin-bottom: 5rpx;
  font-size: 30rpx;
}

.inputbox {
  position: relative;
  height: 50rpx;
  width: 100%;
}

.inputbox text {
  position: absolute;
  transform: translateY(-50%);
  top: 37%;
  left: 0;
}

.title text {
  white-space: nowrap;
  width: 15%;
  height: 50rpx;
  line-height: 50rpx;
  display: inline-block;
}

.t_input {
  width: 100%;
  height: 50rpx;
  /* line-height: 50rpx; */
  font-size: 30rpx;
  /* padding-left: 90rpx; */
}

.placeholder {
  /* line-height: 50rpx; */
  font-size: 30rpx;
}

textarea {
  width: 100%;
  display: block;
  position: relative;
  font-size: 28rpx;
}

.text textarea {
  margin-left: -8rpx;
}

.contents textarea {
  min-height: 90rpx;
  /* line-height: 50rpx; */
  max-height: 120rpx;
}

.add_btn_group {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.add_video, .add_audio, .add_img {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #888;
}

.add_img image {
  width: 36rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.add_audio image {
  width: 24rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.add_video image {
  width: 36rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.bottom {
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.classbox {
  box-sizing: border-box;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.classlist {
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
  margin-bottom: 10rpx;
}

.schoolclass {
  width: 90%;
}

.schoolclass>text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
}

.schoolclass text:nth-child(1) {
  width: 40%;
}

.schoolclass text:nth-child(2) {
  width: 60%;
}

.classlist checkbox {
  transform: scale(0.8);
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  background-color: #fff;
  /* 自定义样式.... */
  color: #f29219;
}

textarea {
  padding: 0;
  outline: none;
  resize: none;
}

.img_video_box .imgs {
  display: flex;
  justify-content: flex-start;
  align-content: center;
  flex-wrap: wrap;
}

.video_box {
  position: relative;
}

.aimg {
  width: 32%;
  height: 200rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.del {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: -15rpx;
  top: -15rpx;
}

.dels {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
  /* position: absolute;
  right: -30rpx;
  top: -30rpx; */
}

.delS {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 10%;
  top: -5rpx;
}

.imgs .pot {
  width: 100%;
  height: 200rpx;
  margin-bottom: 10rpx;
}

.imgs>view:nth-child(3n+2) {
  margin: 0 2%;
}

.isremind {
  font-size: 28rpx;
  background-color: #fff;
  padding: 10rpx 30rpx;
  margin-bottom: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #e51c23;
}

.isremind .radio_group {
  display: inline-block;
  color: #000;
}

.isremind radio {
  transform: scale(0.8);
  margin-left: 10rpx;
}

.voice_mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10;
}

.audios {
  width: 97%;
  position: relative;
}

.voice_box {
  width: 100%;
  height: 300rpx;
  background: #fff;
  position: absolute;
  bottom: 0;
}

.voice_btn {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 88rpx;
  left: 50%;
  transform: translate(-50%);
}

.cancel {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 10rpx;
  bottom: 275rpx;
}

.voice_title {
  font-size: 40rpx;
  color: #222;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 0rpx;
}

.countDown {
  text-align: center;
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%);
}

.voice_animate {
  width: 90%;
  height: 100%;
  position: relative;
}

.playimg, .stopimg {
  width: 100%;
  height: 70rpx;
  position: relative;
}

