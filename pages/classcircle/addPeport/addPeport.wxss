.audio {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
  border: 1rpx solid #ebebeb;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  background-color: #fbdeba;
}

.videos {
  width: 80%;
  height: 300rpx;
  border-radius: 10rpx;
}

.bottomtab {
  position: fixed;
  bottom: 0rpx;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border: 2rpx solid #f29219;
  box-sizing: border-box;
}

.bottomtab .look, .bottomtab .set {
  font-size: 30rpx;
  height: 100%;
  line-height: 90rpx;
  text-align: center;
  border-radius: 0;
}

.bottomtab .look {
  width: 30%;
  color: #f29219;
  background-color: #fff;
}

.bottomtab .set {
  width: 70%;
  background-color: #f29219;
  color: white;
}

button::after {
  border: none;
}

.c_videos {
  width: 33%;
  height: 250rpx;
}

.c_video .videoimg {
  width: 100%;
  height: 250rpx;
}

.c_videos .c_video .delS {
  right: -50rpx;
}

.close {
  position: absolute;
  top: 0;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  z-index: 10;
}


.content_info{
  font-size: 27rpx;
  text-align: center;
