.schoolin_class_preview_photo {
  background: #bbb;
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
  text-align: center;
  overflow: hidden;
}

.class_photo_next {
  background: #ff9800;
  color: white;
  height: 74rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
}

.schoolin_class_list {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.schoolin_class_tips {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #cdcecd;
}

.name {
  font-size: 28rpx;
}

.class_tips {
  height: 32rpx;
  width: 32rpx;
  margin-right: 10rpx;
}

/* 表格 */

.table {
  border: 0px solid darkgray;
  font-size: 12px;
  padding: 18rpx;
}

.tr {
  display: flex;
  /* width: 2700rpx; */
  align-items: center;
  /* border: 2rpx solid #bbbbbb; */
}

.td {
  border-top: 2rpx solid #bbb;
  border-left: 2rpx solid #bbb;
  width: 17.5%;
  height: 48rpx;
  justify-content: center;
  text-align: center;
  word-wrap: break-word;
  flex-shrink: 0;
  line-height: 48rpx;
}

.td:nth-child(1) {
  width: 50rpx;
}

.td:nth-child(6) {
  border-right: 2rpx solid #bbb;
}

.tr:nth-child(9) {
  border-bottom: 2rpx solid #bbb;
}

.gray {
  /* background: #E6FE3; */
}

/* 修改样式 */

.mask-content {
  display: flex;
  flex-direction: row;
  padding: 15rpx;
}

.mask-content-container {
  display: flex;
  flex-direction: column;
}

.content-container {
  width: 17%;
  height: 48rpx;
}

/* .list-mask-title {
  text-align: center;
  font-size: 24rpx;
  height: 48rpx;
} */

.list-mask-input {
  text-align: center;
  font-size: 24rpx;
  border: 2rpx solid #bbb;

}

.btn-Change {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn {
  width: 20%;
  height: 50rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
}

.cue {
  color: #cdcecd;
  font-size: 22rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
}

.mask-content .mask-content-container:nth-child(1) {
  width: 110rpx;
}
