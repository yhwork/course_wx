        <image src=" https://iforbao-prod.oss-cn-hangzhou.aliyuncs.com/public/assets/img/lianxi.png" class='iconb icon_m'></image>
        <text style="margin-left: 18rpx;font-size:28rpx;">联系方式</text>
        <!-- <view class="weui-cell__bd" style="margin-left: 50rpx;font-size:28rpx;">联系方式</view> -->
