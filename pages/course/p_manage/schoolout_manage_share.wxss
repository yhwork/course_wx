/*
  隐藏滚动条
*/

::-webkit-scrollbar {
  width: 4px;
  height: 4px;
  color:#ffffff;
}

/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.3);
  box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  background-color:#FFFFFF;
}

/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb {
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.3);
  box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.1);
  background-color:#f7f8f7;
}










.page_top {
  padding: 30rpx 30rpx 50rpx 30rpx;
  background: #fff;
  font-size: 26rpx;
  color: #999;
}

.course_name_type {
  display: flex;
  align-items: center;
}

.course_name {
  font-size: 34rpx;
  color: #222;
  margin-bottom: 10rpx;
}

.course_type {
  margin-left: 20rpx;
}

.course_type image {
  width: 84rpx;
  height: 28rpx;
  border-radius: 6rpx;
}

.date{
  display: flex;
  justify-content: left;
  flex-direction: column;
}
.time, .start_date {
  margin-right: 50rpx;
}

.addr {
  display: flex;
  align-items: center;
  /* margin-top: 20rpx; */
  color: #576b95;
}

.addr image {
  width: 24rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.hint {
  padding: 30rpx 30rpx 10rpx 30rpx;
  font-size: 26rpx;
  color: #cc928d;
}

.course_list {
  padding: 4rpx;
}

.course_item {
  display: inline-block;
  width: 332rpx;
  height: 300rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  text-align: center;
  box-sizing: border-box;
  margin: 20rpx 0 0 26rpx;
  vertical-align: middle;
}

.photo_box {
  width: 154rpx;
  height: 154rpx;
  margin: 20rpx auto;
  position: relative;
}

.photo_box image {
  width: 154rpx;
  height: 154rpx;
  border-radius: 154rpx;
}

.photo_box .sex {
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}

.percen_name {
  font-size: 34rpx;
  color: #222;
}

.course_item .course_name {
  font-size: 26rpx;
  color: #888;
  margin-top: 10rpx;
}

