  height: 66rpx;
  margin: 60rpx auto;
}

.add_btn image {
  width: 66rpx;
  height: 66rpx;
}

.add_title {
  font-size: 26rpx;
  color: #b2b2b2;
}

.share_mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
}

.share_box {
  width: 100%;
  padding: 30rpx 0;
  background: #fff;
  position: absolute;
  bottom: 0;
  box-sizing: border-box;
}

.hint_box {
  padding: 0 30rpx;
}

.hint_title {
  font-size: 36rpx;
  color: #000;
  text-align: center;
}

.hint_top {
  padding: 10rpx 0;
  position: relative;
}

.cancel {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 26rpx;
  color: #b2b2b2;
}

.hint_cont {
  padding: 0 30rpx 30rpx 30rpx;
  color: #888;
  font-size: 30rpx;
}

