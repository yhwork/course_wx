.set_box {
  background: #fff;
  padding: 30rpx;
  border-top: 2rpx solid #e5e5e5;
  position: relative;
}
.line{
  height: 2rpx;
  width: 93%;
  /* border-top: 2rpx solid #bbbbbb; */
  position: absolute;
  top: 50%
}
.set_box .title {
  position: absolute;
  left: 16rpx;
  font-size: 34rpx;
  color: #000;
  line-height: 1em;
}

.set_box .title text {
  color: #f95b58;
  margin-left: 6rpx;
}

.set_list {
  display: flex;
  justify-content: space-between;
  color: #888;
  font-size: 0;
}

.set_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  border-radius: 4rpx;
  font-size: 26rpx;
  line-height: 1em;
  padding: 10rpx 0;
}

.set_item:not(:nth-last-child(1)) {
  margin-right: 30rpx;
}

.set_item .set_all {
  font-size: 28rpx;
}

.set_item .weekday {
  font-size: 28rpx;
  color: #353535;
}
