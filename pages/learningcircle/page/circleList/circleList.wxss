/* pages/circle/circleList/circleList.wxss */

.textover {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.circlelist_container {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.circle_lists {
  height: 160rpx;
  border-bottom: 1px solid #e5e5e5;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.circle_lists_left {
  float: left;
  width: 200rpx;
  height: 160rpx;
}

.circle_lists_left image {
  width: 200rpx;
  height: 160rpx;
  border-radius: 4rpx;
}

.circle_lists_right {
  width: 460rpx;
  float: left;
}

.circle_lists_right {
  margin-left: 30rpx;
}

.circle_lists_title {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Regular;
  color: #222;
  margin-top: 6rpx;
  margin-bottom: 20rpx;
}

.circle_lists_text {
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
  margin-bottom: 20rpx;
}

.lists_tabs {
  float: left;
  margin-right: 40rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  color: rgba(136, 136, 136, 1);
  line-height: 26rpx;
}

.lists_tabs text {
  margin-left: 10rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  color: rgba(136, 136, 136, 1);
  line-height: 26rpx;
}

.master {
  width: 60rpx;
  height: 32rpx;
  text-align: center;
  line-height: 30rpx;
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  /* top: 40rpx; */
  left: 10rpx;
  color: #fff;
  font-size: 20rpx;
  border-radius: 4rpx;
}
