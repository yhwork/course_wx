/* pages/circle/themeDetail/themedetail.wxss */

page {
  background: #f4f4f4;
}

.headImg_box {
  position: relative;
  font-size: 0;
}

.headImg_box::after {
  content: "";
  width: 750rpx;
  height: 420rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.06);
}

.headImg {
  width: 100%;
  /* height: 420rpx; */
}

.theme_title {
  font-size: 48rpx;
  color: #000;
  line-height: 1em;
  margin: 40rpx 20rpx;
}

.main_body {
  background: #fff;
  padding: 40rpx 30rpx 100rpx 30rpx;
}

.time_name {
  display: flex;
  font-size: 30rpx;
  color: #888;
  margin: 20rpx 0;
}

.time_name .name {
  margin-left: 20rpx;
}

.theme_content {
  font-size: 34rpx;
  color: #111;
}

.intro_item {
  margin-top: 20rpx;
}

.img_content {
  position: relative;
  font-size: 0;
}

.img_content::after {
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.06);
}

video, .intro_img {
  width: 100%;
  /* height: 388rpx; */
}

.already {
  width: 100%;
  height: 94rpx;
  opacity: 0.8;
  border-radius: 0px;
  /* margin: 80rpx auto; */
  background: #e2e2e2;
  position: fixed;
  bottom: 0rpx;
  /* left: 50%; */
  color: #888;
}

button {
  width: 100%;
  height: 94rpx;
  opacity: 0.8;
  border-radius: 10px;
  /* margin: 80rpx auto; */
  position: fixed;
  bottom: 0rpx;
  /* left: 50%; */
}

.audio_time {
  position: absolute;
  right: -80rpx;
  top: 50%;
  transform: translateY(-50%);
}
