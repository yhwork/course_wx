.msg_item{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 30rpx;
  position: relative;
}
.msg_item::after{
  width: 100%;
  height: 2rpx;
  background-color: #e5e5e5;
  content: "";
  position: absolute;
  bottom: 0;
  right: 0;
}
.name{
  font-size:28rpx;
  color: #222;
}
.photo{
  width: 72rpx;
  height: 72rpx;
  border-radius:72rpx; 
}
.right_top{
  display: flex;
  justify-content: space-between;
  width: 564rpx;

}
.time{
  font-size: 24rpx;
  color: #888;
}
.msg_cont{
  font-size: 24rpx;
  color: #666;
