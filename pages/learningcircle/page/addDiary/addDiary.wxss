/* pages/circle/addDiary/addDiary.wxss */
@import '../creatTheme/creatTheme.wxss';
@import "../../../../components/img_video/img_video.wxss";

page {
  background: #f4f4f4;
}

.title {
  padding-left: 30rpx;
}

.form_box {
  padding: 0 30rpx;
  background: #fff;
}

.fa-angle-right {
  font-size: 50rpx;
  color: #c7c7cc;
  margin-left: 20rpx;
}

.pos_icon {
  width: 32rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.see_icon {
  margin-right: 16rpx;
  width: 32rpx;
  height: 36rpx;
}

.form_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.form_item:nth-child(1) {
  border-bottom: 2rpx solid #e5e5e5;
}

.form_left {
  display: flex;
  align-items: center;
}

.form_right {
  display: flex;
  align-items: center;
  color: #b2b2b2;
}

.form_right .addr {
  max-width: 440rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.submit {
  width: 670rpx;
  height: 94rpx;
  background: #f29219;
  color: #fff;
  text-align: center;
  line-height: 94rpx;
  margin: 60rpx auto;
  left: 50%;
  transform: translateX(-50%)
}

.limit_mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
}

.limit_box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 340rpx;
  background: #fff;
  text-align: center;
  position: absolute;
  bottom: 0;
  z-index: 10;
  padding: 70rpx 0;
  box-sizing: border-box;
}

.select {
  color: #007aff;
}

.map_box {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
}

.map_box map {
  height: 100%;
}

.slid .time {
  position: absolute;
  right: -80rpx;
  top: 0;
  transform: translateY(20%);
}
.countDown{
  text-align: center;
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%)
}
.save {
  display: flex;
  align-items: center;
  position: absolute;
  height: 1em;
  font-size: 24rpx;
  background: #e5e5e5;
  padding: 2rpx 4rpx;
  border: 2rpx solid #b2b2b2;
  border-radius: 4rpx;
  bottom: 20rpx;
  right: 20rpx;
}

.voice_mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10;
}

.voice_box {
  width: 100%;
  height: 300rpx;
  background: #fff;
  position: absolute;
  bottom: 0;
}

.cancel {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 10rpx;
  bottom: 275rpx;
}

.voice_box .voice_box_close {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 88rpx;
  left: 50%;
  transform: translate(-50%);
}

.voice_box_close .voice_box_close_imge {
  width: 50rpx;
  height: 50rpx;
}

.voice_btn {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 88rpx;
  left: 50%;
  transform: translate(-50%);
}

.voice_mask .hint {
  position: absolute;
  bottom: 120rpx;
  left: 50%;
  transform: translate(-50%);
  font-size: 50rpx;
  color: #222;
  margin-left: 0; 
}

.voice_title {
  font-size: 40rpx;
  color: #222;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 0rpx;
}

.content image, .content video {
  width: 100%;
  /* height: 388rpx;*/
}

.video_btn_box {
  width: 690rpx;
  height: 388rpx;
  background: rgba(0, 0, 0, 0.2);
  position: relative;
}

.video_btn_box image {
  width: 100%;
  height: 100%;
}

.video_btn {
  width: 0;
  height: 0;
  border-top: 30rpx solid transparent;
  border-left: 50rpx solid #fff;
  border-bottom: 30rpx solid transparent;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

