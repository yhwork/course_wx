} */

.video_box {
  display: inline-block;
  position: relative;
}

.img_video_box .img_content {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.content {
  padding: 40rpx 30rpx 10rpx;
  border-bottom: none;
  background-color: #fff;
}

.contents {
  padding: 10rpx 30rpx 10rpx;
}

.slid {
  top: 47%;
  left: 90rpx;
}

.voice_animate {
  width: 100%;
  height: 100%;
}

.playimg, .stopimg {
  width: 100%;
  height: 70rpx;
  position: relative;
}

.playimg image, .stopimg image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
}

.proleft {
  position: absolute;
  top: 50%;
  right: 110rpx;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #888;
  display: inline-block;
}

.audio {
  display: flex;
  align-items: center;
  height: 70rpx;
  border: 1rpx solid #ebebeb;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  background-color: #fbdeba;
}
