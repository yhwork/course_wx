.editor textarea {
  height: 150rpx;
}

.img_video_box {
  padding: 0 30rpx;
}

.img_item {
  /* display: inline-block; */
  position: relative;
  margin-bottom: 25rpx;
  /* margin-left: 10rpx; */
}

