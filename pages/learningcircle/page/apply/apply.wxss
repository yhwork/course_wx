/* 遮罩层功能 */
.clocker_mask {
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10;
}

.clocker_box {
  width: 100%;
  background: #fff;
  position: absolute;
  bottom: 0;
}

.clocker_item {
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx;
  position: relative;
}

.clocker_item::after {
  content: "";
  width: 610rpx;
  height: 2rpx;
  background: #e5e5e5;
  position: absolute;
  bottom: 0;
  right: 0;
}

.clocker_pho {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

.clocker_name {
  margin-left: 30rpx;
}
.cl_date_time{
  background: #fff;
  padding-bottom: 30rpx;
}
.title_box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  margin-top: 20rpx;
}

.title_box image {
