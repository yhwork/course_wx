/* pages/circle/memAdmin/memAdmin.wxss */

page {
  background: #f4f4f4;
}

.nav_tab {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 90rpx;
  font-size: 28rpx;
  background: #fff;
  padding: 0 30rpx;
  color: #353535;
  border-bottom: 2rpx solid #e5e5e5;
}

.active {
  color: #f29219;
  border-bottom: 4rpx solid #f29219;
}

.jioning {
  padding: 30rpx 30rpx 0 30rpx;
  background: #fff;
}

.jioning:not(:nth-child(1)) {
  margin-top: 10rpx;
}

.basic_info {
  display: flex;
  align-items: center;
}

.info_right {
  margin-left: 30rpx;
}

.photo_box {
  width: 84rpx;
  height: 84rpx;
  position: relative;
}

.photo {
  width: 84rpx;
  height: 84rpx;
  position: relative;
  border-radius: 84rpx;
}

.sex {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 10;
}

.user_num {
  font-size: 26rpx;
  color: #888;
}

.jion_info {
  margin-top: 40rpx;
  padding-bottom: 40rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.jion_info_item {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  color: #666;
  margin-top: 14rpx;
}

.jion_foot {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #888;
}

.clock_calendar, .out {
  display: flex;
  align-items: center;
}

.out_img, .calendar_img {
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.show {
  display: block;
}

.hide {
  display: none;
}

.wait_item {
  background: #fff;
  padding: 30rpx;
}

.wait_item:not(:nth-child(1)) {
  margin-top: 10rpx;
}

.appl_time {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  margin: 40rpx 0;
  color: #666;
}

.date_time {
  display: flex;
}

.date_time .time {
  margin-left: 10rpx;
}

.wait_foot {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 16rpx;
  border-top: 2rpx solid #e5e5e5;
  color: #888;
}

.refuse, .agree {
  display: flex;
  align-items: center;
}

.refuse image, .agree image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
}

.refused_item {
  background: #fff;
  padding: 30rpx 30rpx 4rpx 30rpx;
  position: relative;
}
.refused_item:not(:nth-child(1)){
  margin-top: 10rpx;
}
.refused_img{
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  top: 40rpx;
  right: 40rpx;
}
