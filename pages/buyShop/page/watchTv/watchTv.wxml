<view>
  <view>{{model.name}}</view>
  <view class="video-container" wx:if="{{model.isvideo == 'true'}}">
    <video id="myVideo" class="video" src="{{model.url}}" controls="{{controls}}" bindended="endMovie" play-btn-position="center" enable-play-gesture="{{true}}" enable-progress-gesture="{{false}}" show-fullscreen-btn="{{true}}" title="{{model.title}}" bindfullscreenchange="handleFullScreen"
      bindtimeupdate='onTimeUpdate' initial-time='{{number_time}}' bindpause='pause_video' />
