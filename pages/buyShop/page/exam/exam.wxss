.exam {
  width: 750rpx;
  padding-bottom: 80rpx;
}

.exam_wrap {
  width: 700rpx;
  padding: 0 25rpx;
}

.exam_title {
  font-size: 30rpx;
  text-align: center;
  font-weight: bolder;
  line-height: 40rpx;
}

.title_prompt {
  font-size: 24rpx;
}

.qustion_title {
  font-size: 24rpx;
}

.exam_questions {
  margin-top: 20rpx;
  width: 700rpx;
  height: 400rpx;
}

.radio-group {
  border-bottom: 1px solid #ddd;
}

.radio {
  display: block;
  padding: 3px;
  font-size: 24rpx;
  margin-top: 30rpx;
}

.radio_type {
  margin-right: 20rpx;
}

.exam_title text {
  display: block;
}

.page__hd {
