  border-radius: 20rpx;
  margin: 0 auto;
  margin-top: 1390rpx;
  text-align: center;
  color: white;
}

.btn_default {
  background-color: white;
  color: black;
  margin-top: 30rpx;
  border: 1rpx solid gray;
}

