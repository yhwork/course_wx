  padding: 10rpx 10rpx;
  width: 730rpx;
  background-color: white;

}
.time_picker{
  width: 550rpx;
  height: 60rpx;

  text-align: center;
}
.userinfo{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
}
.usrname{
  font-size: 24rpx;
  display: flex;
  align-items: center;
  color: #789eb9;

}

.calendar{
