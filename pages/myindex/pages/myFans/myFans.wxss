/* pages/mypage/myFans/myFans.wxss */

.fl {
  float: left;
}

.fr {
  float: right;
}

.textover {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* list  s */

.attention_lists_wrap {
  padding: 0 30rpx;
  background: #fff;
}

.attention_lists_li {
  height: 128rpx;
  overflow: hidden;
  border-bottom: 1px solid #e5e5e5;
}

.attention_lists_li_left {
  float: left;
  display: flex;
  align-items: center;
  height: 128rpx;
  margin-right: 20rpx;
  position: relative;
}

.attention_lists_li_left .gender_sex {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 40rpx;
  bottom: 25rpx;
}

.attention_lists_li_left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

.attention_lists_li_right {
  width: 550rpx;
  float: left;
  height: 93rpx;
  /* padding: -40rpx 0; */
}

.lists_li_right_name {
  font-size: 34rpx;
  color: #353535;
  height: 100rpx;
}

.lists_li_right_class {
  font-size: 28rpx;
  color: #888;
}

/* list  e */

.fans_info {
  width: 400rpx;
  float: left;
  height: 100rpx;
  line-height: 128rpx;
}

.care_btn_wrap {
  float: right;
  display: flex;
  align-items: center;
  height: 130rpx;
}

.care_btn_wrap_attention {
  float: right;
  display: flex;
  align-items: center;
  height: 130rpx;
  position: absolute;
  right: 70rpx;
}

.care_btn {
  width: 120rpx;
  height: 50rpx;
  text-align: center;
  color: rgba(242, 146, 25, 1);
  line-height: 52rpx;
  border-radius: 26px;
  border: 2rpx solid rgba(242, 146, 25, 1);
  font-size: 28rpx;
}

.care_btn_end {
  background: rgba(178, 178, 178, 0.2);
  color: #b2b2b2;
  border: none;
  width: 124rpx;
  height: 56rpx;
  line-height: 56rpx;
}


.nav {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  /* border-bottom: 2rpx solid gainsboro; */
}

.default {
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  /* border-right: 1px solid gainsboro; */
  color: #000;
  font-weight: bold;
  font-size: 28rpx;
}

.red {
  line-height: 100rpx;
  text-align: center;
  color: #f29219;
  flex: 1;
  /* border-right: 1px solid gainsboro; */
  font-weight: bold;
  font-size: 28rpx;
}

.show {
  display: block;
}

.hidden {
  display: none;
  text-align: center;
  line-height: 200px;
}
