.fl {
  float: leftï¼›;
}

.fr {
  width: 50%;
  float: right;
  display: flex;
  justify-content: space-between;
}

.personal_container {
  background: #fff;
  min-height: 1220rpx;
}

.textover {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.personal_lists {
  height: 120rpx;
}

.personal_lists_ul {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.personal_lists_li {
  padding: 10rpx 0;
  border-bottom: 1px solid #e5e5e5;
  /* overflow: hidden; */
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.time {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  color: rgba(102, 102, 102, 1);
  line-height: 34rpx;
  margin-top: 10rpx;
  /* margin-right: 20rpx; */
}

.follow_btn {
  /* width:117rpx; *//* height:52rpx; */
  line-height: 52rpx;
  text-align: center;
  color: rgba(242, 146, 25, 1);
  border-radius: 26rpx;
}

.personal_lists_header {
  /* display: inline-block; */
  overflow: hidden;
}

.r_info_info_pic {
  display: inline-block;
  width: 120rpx;
  float: left;
  position: relative;
}

.r_info_info_pic .sex {
  position: absolute;
  bottom: -8rpx;
  right: 0;
  z-index: 999;
}

.r_info_info_pic .sex image {
  width: 40rpx;
  height: 40rpx;
}

.r_info_info_pic .pic_wrap {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  background-color: #f5f5f5;
  margin: 0 auto;
}

.r_info_info_pic .pic_wrap image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 120rpx;
}

.r_info_info_pic .pic_wrap .pic {
  -webkit-background-size: cover;
  background-size: cover;
  text-align: center;
  vertical-align: middle;
  background-position: center;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  /* box-shadow: 0 0 0 1px rgb(101,151,224) inset; */
  background-image: url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1533041023356&di=2695ac109873e79d9bda914bb84dbb68&imgtype=0&src=http%3A%2F%2Fimg4.duitang.com%2Fuploads%2Fitem%2F201312%2F04%2F20131204133424_RVFdA.thumb.600_0.jpeg);
  position: relative;
  z-index: 10;
  background-repeat: no-repeat;
  top: 0;
  left: 0;
}

.personal_lists_info {
  display: inline-block;
  margin-left: 20rpx;
  float: left;
}

.personal_lists_name {
  /* width: 250rpx;
  height: 34rpx; */
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  color: rgba(102, 102, 102, 1);
  line-height: 34rpx;
  margin-top: 10rpx;
}

.personal_lists_taps {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  color: #ffbe00;
  margin-top: 20rpx;
}
