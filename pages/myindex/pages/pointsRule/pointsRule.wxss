
/* 积分规则 */

.points_rule_list {
  padding: 10rpx 40rpx;
  background: #fff;
}

.points_rule_tit {
  font-size: 32rpx;
  margin: 20rpx 0;
}

.points_rule_introduce {
  padding: 20rpx;
  font-size: 26rpx;
  color: #ff9800;
  background: #fefde9;
}

.rule_list {
  padding-top: 20rpx;
  display: flex;
  flex-direction: row;
}

.icon_rule {
  width: 35rpx;
  height: 35rpx;
  margin-right: 16rpx;
   margin-top: 10rpx;
}

.rule_name {
  font-size: 32rpx;
}
.rule_lis{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.rule_box{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.rule {
  font-size: 26rpx;
  color: #acadad;
}

.text {

  font-size: 26rpx;
  color: #ff9800;
}
