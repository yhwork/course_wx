/* pages/mypage/upinput/upinput.wxss */
.upinput{
  max-width: 750rpx;
  overflow-x: hidden;
  /* background-color: #999; */
}
.upinpt_box{
  padding:25rpx 5rpx; 
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-around;
  /* border: 1px solid red; */
}
.upinput_txt{
  flex: 5; 
  outline-style: none;
  border-bottom: 1px solid rgba(188, 214, 41, 0.1);
  margin-left:15rpx;
  /* background-color: white; */
  min-width: 460rpx;
  height: 60rpx;
  padding-left: 10rpx;
}
.upinput_txt input{
  width: 100%;
  text-indent: 0.5rem;
  color: #9e9e9e;
  font-size: 0.8rem;
  height: 60rpx;
}
.btnok{
  margin: 5rpx;
  border-radius: 5px;
  flex: 1;
  border: 1rpx solid #e7c60e;
  box-shadow: 1px 1px 2px rgb(245, 237, 237);
  color: #e7c60e;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  align-self: center;
}